import glob
Import('env')

CPPATH = "./include"
env.Append(CPPPATH="#thirdparty/glew/include")
print(env['CPPPATH'])
src_files=glob.glob("src/*.c")
print(src_files)
LIBS =[]+env["LIBS"]
print(f"glew dependencies: {LIBS}")
LIBS.remove("glfw")
LIBS.remove("GLEW")
env.SharedLibrary("GLEW", src_files,LIBS=LIBS)
